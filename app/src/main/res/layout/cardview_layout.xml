
<androidx.cardview.widget.CardView
    android:id="@+id/cardviewContent"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="25dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#63D0B5"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="265dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:background="#63D0B5"
        android:paddingTop="4dp"
        android:text="CHILL BASKETBALL"
        android:textSize="25dp"
        android:textStyle="bold">
    </TextView>

    <Button
        android:id="@+id/joinButton"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginTop="9dp"
        android:layout_gravity="right"
        android:layout_marginRight="7dp"
        android:background="@drawable/button_background_dark"
        android:text="+ JOIN">
    </Button>

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:gravity="left|center"
        android:layout_gravity="left"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:text="Matyas Buzogany"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/ic_username">

    </TextView>

    <TextView
        android:id="@+id/cityTextView"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:gravity="left|center"
        android:layout_gravity="left"
        android:layout_marginTop="80dp"
        android:text="Cluj-Napoca"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/ic_hometown">
    </TextView>

    <TextView
        android:id="@+id/addressTextview"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:gravity="left|center"
        android:layout_gravity="left"
        android:layout_marginTop="110dp"
        android:text="Strada Donat 7"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/ic_street">
    </TextView>

    <TextView
        android:id="@+id/phoneTextview"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:gravity="left|center"
        android:layout_gravity="right"
        android:layout_marginTop="50dp"
        android:layout_marginRight="25dp"
        android:text="0751865264"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_phone">
    </TextView>

    <TextView
        android:id="@+id/dateTextview"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:gravity="left|center"
        android:layout_gravity="right"
        android:layout_marginTop="80dp"
        android:layout_marginRight="25dp"
        android:text="2020-01-01"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_date">
    </TextView>


    <TextView
        android:id="@+id/peopleTextView"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="110dp"
        android:layout_marginRight="25dp"
        android:text="15"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_people">
    </TextView>

</androidx.cardview.widget.CardView>
